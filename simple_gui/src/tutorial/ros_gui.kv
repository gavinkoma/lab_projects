FloatLayout:
    
    MDRaisedButton:
        canvas:
            Color:
                rgba: (1,1,1,0.5)
            Rectangle:
                size: self.size
                pos: self.pos
        text: "Start treadmill."
        font_size: "30sp"
        size_hint: 0.35,0.25
        pos_hint: {"center_x":0.25,"center_y": 0.83}
        on_press: app.start_tread(*args)
        
